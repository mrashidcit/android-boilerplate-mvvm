<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.android.boilerplate.view.auth.verifyotp.VerifyOtpFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/skin_FDF8F4_black_1D1D1D">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            style="@style/SelectableItemBackgroundBorderless"
            android:layout_width="@dimen/sdp_24"
            android:layout_height="@dimen/sdp_24"
            android:layout_marginHorizontal="@dimen/sdp_16"
            android:layout_marginTop="@dimen/sdp_30"
            android:contentDescription="@string/back"
            android:padding="@dimen/sdp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/tv_poppins_semi_bold_12_black_595959_gray_C8C8C8"
            android:text="@string/otp_verification"
            android:textSize="@dimen/ssp_15"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enter_otp_sent_to_email"
            style="@style/tv_poppins_semi_bold_9_gray_8D8D8D_gray_C8C8C8"
            android:layout_marginTop="@dimen/sdp_37"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/enter_otp_sent_to_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:ignore="TextContrastCheck" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_otp_digit_1"
            style="@style/et_poppins_regular_12_gray_8D8D8D_white_FFFFFF_white_bg"
            android:layout_width="@dimen/sdp_35"
            android:layout_height="@dimen/sdp_33"
            android:layout_marginTop="@dimen/sdp_31"
            android:layout_marginEnd="@dimen/sdp_12"
            android:digits="@string/digits"
            android:gravity="center"
            android:hint="@string/asterisk"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@id/et_otp_digit_2"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp_sent_to_email"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_otp_digit_2"
            style="@style/et_poppins_regular_12_gray_8D8D8D_white_FFFFFF_white_bg"
            android:layout_width="@dimen/sdp_35"
            android:layout_height="@dimen/sdp_33"
            android:layout_marginTop="@dimen/sdp_31"
            android:layout_marginEnd="@dimen/sdp_6"
            android:digits="@string/digits"
            android:gravity="center"
            android:hint="@string/asterisk"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp_sent_to_email"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_otp_digit_3"
            style="@style/et_poppins_regular_12_gray_8D8D8D_white_FFFFFF_white_bg"
            android:layout_width="@dimen/sdp_35"
            android:layout_height="@dimen/sdp_33"
            android:layout_marginStart="@dimen/sdp_6"
            android:layout_marginTop="@dimen/sdp_31"
            android:digits="@string/digits"
            android:gravity="center"
            android:hint="@string/asterisk"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp_sent_to_email"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_otp_digit_4"
            style="@style/et_poppins_regular_12_gray_8D8D8D_white_FFFFFF_white_bg"
            android:layout_width="@dimen/sdp_35"
            android:layout_height="@dimen/sdp_33"
            android:layout_marginStart="@dimen/sdp_12"
            android:layout_marginTop="@dimen/sdp_31"
            android:digits="@string/digits"
            android:gravity="center"
            android:hint="@string/asterisk"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintStart_toEndOf="@id/et_otp_digit_3"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp_sent_to_email"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify"
            style="@style/btn_poppins_semi_bold_13_black_595959"
            android:layout_marginHorizontal="@dimen/sdp_16"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="@string/verify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_otp_digit_1"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdp_12"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_verify">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_resend_otp"
                style="@style/tv_poppins_semi_bold_9_gray_8D8D8D_gray_C8C8C8"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="@dimen/sdp_4"
                android:text="@string/resend_otp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_timer"
                style="@style/tv_poppins_semi_bold_9_gray_8D8D8D_gray_C8C8C8"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/temp_timer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>